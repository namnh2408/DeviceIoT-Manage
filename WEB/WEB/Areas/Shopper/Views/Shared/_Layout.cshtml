                                            <li class="col-sm-12">
                                                <ul class="multi-column-dropdown">
                                                    @foreach (var itemPt in db.LoaiSPs.Where(c => c.MaDanhMuc == itemCate.MaDanhMuc))
                                                    {
                                                        <li><a href="@Url.Action("SanPhamTheoLoai", "SanPham", new { id = itemPt.MaLoaiSP, page = 1 })"><i aria-hidden="true"></i>@itemPt.TenLoaiSP</a></li>
