                            <li><a href="@Url.Action("Index", "Home")" class="cool-link"><span style="color: black">Trang chủ</span></a></li>
                            @{
                                WEB.Areas.Shopper.Models.UserContext db = new WEB.Areas.Shopper.Models.UserContext();
