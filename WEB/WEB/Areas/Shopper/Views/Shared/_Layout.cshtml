                        {
                            <a href="@Url.Action("Index","GioHang")"><span class="fa fa-shopping-cart my-cart-icon" style="color:#379683;"><span class="badge badge-notify my-cart-badge">0</span></span></a>
                        }
                        else
                        {
                            <a href="@Url.Action("Index","GioHang")"><span class="fa fa-shopping-cart my-cart-icon" style="color:#379683;"><span class="badge badge-notify my-cart-badge">@gio.Count</span></span></a>
                        }
                    }
