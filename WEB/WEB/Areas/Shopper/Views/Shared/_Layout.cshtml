                                    <li class="col-sm-12">
                                        <ul class="multi-column-dropdown">
                                            @foreach (var itemPdc in db.ThuongHieux)
                                            {
                                                <li><a href="@Url.Action("SanPhamTheoThuongHieu", "SanPham", new { id = itemPdc.MaThuongHieu, page = 1 })"><img src="@itemPdc.Photo" width="20" height="20" /> @itemPdc.TenTH</a></li>
                                            }
                                        </ul>
                                    </li>
                                </ul>
                            </li>

