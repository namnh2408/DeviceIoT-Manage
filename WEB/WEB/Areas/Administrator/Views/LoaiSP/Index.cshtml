@model IEnumerable<WEB.Areas.Administrator.Models.LoaiSP>

@{
    ViewBag.Title = "Loại sản phẩm";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<h2>Loại sản phẩm</h2>
<div class="text-warning">
    @ViewBag.TypeError
</div>
<hr />
<div class="col-lg-6">
    <div class="panel panel-default">
        <div class="panel-heading">
            <a class="btn btn-primary btn-default" href="@Url.Action("Create", "LoaiSP")" role="button"><i class="fa fa-plus-circle"></i> Tạo loại sản phẩm mới</a>
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="table-responsive table-bordered">
                <table class="table">
                    <thead>
                        <tr style="background-color:#eeeeee">
                            <th>#</th>
                            <th>Tên danh mục</th>
                            <th>Tên loại sản phẩm</th>
                            <th>Chức năng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.MaLoaiSP)</td>
                                <td>@Html.DisplayFor(modelItem => item.DanhMuc.TenDanhMuc)</td>
                                <td>@Html.DisplayFor(modelItem => item.TenLoaiSP)</td>
                                <td>
                                    <a href="@Url.Action("Edit", "LoaiSP", new { id = item.MaLoaiSP })"><i class="fa fa-pencil fa-fw"></i></a>|
                                    <a onclick="return confirm('Bạn có chắc chắn muốn xoá loại sản phẩm này?')" href="@Url.Action("Delete", "LoaiSP", new { id = item.MaLoaiSP })"><i class="fa fa-times fa-fw"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>

