@model WEB.Areas.Administrator.Models.HoaDon

@{
    ViewBag.Title = "Hoàn tất đơn hàng";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<meta charset="utf-8">
<h2>Hoàn tất đơn hàng</h2>

@using (Html.BeginForm("Edit", "HoaDon", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.MaHD)
        @Html.HiddenFor(model => model.DienThoai)
        @Html.HiddenFor(model => model.NgayTao)
        @Html.HiddenFor(model => model.XacNhan)
        @Html.HiddenFor(model => model.HoanTat)
        @Html.HiddenFor(model => model.GhiChu)
        @Html.HiddenFor(model => model.Total)
        <div class="text-success">
            @ViewBag.EditTypeError
        </div>
        <div class="form-group col-lg-5">
            <label>Ngày giao</label>
            @Html.EditorFor(model => model.NgayGiao, new { htmlAttributes = new { @class = "form-control" } })
            <div class="text-danger">@Html.ValidationMessageFor(model => model.NgayGiao)</div>
            <br />
            <input type="submit" value="Cập nhật" class="btn btn-default" />

            <br />
            <br />
            <a href="@Url.Action("Index3", "HoaDon")"><i class="fa fa-forward"> </i> In hóa đơn</a>
        </div>
    </div>
}
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>


