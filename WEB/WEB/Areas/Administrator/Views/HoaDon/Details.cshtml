@model WEB.Areas.Administrator.Models.HoaDon
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>In hóa đơn</title>
    <link rel="stylesheet" href="~/Areas/Administrator/Content/style.css" media="all" />
</head>
<body style="max-height:960px">
    <header class="clearfix">
        <div id="logo">
            <h1 style="font-size:35px;">Watch Shop</h1>
        </div>
        <div id="company">
            <h2 class="name">Watch Shop</h2>
            <div>1 Võ Văn Ngân, Linh Chiểu, Thủ Đức, TP.HCM</div>
            <div>0909090909</div>
            <div><a href="mailto:watchshop@gmail.com">watchshop@gmail.com</a></div>
        </div>
    </header>
    <main>
        <div id="details" class="clearfix">
            <div id="client">
                <div class="to">Hóa đơn đến:</div>
                <h2 class="name">@Model.KhachHang.HoTenKH</h2>
                <div class="address">@Model.KhachHang.DiaChiKH</div>
                <div class="fa-phone">@Model.KhachHang.DienThoai</div>
            </div>
            <div id="invoice">
                <h1>@Model.MaHD</h1>
                <div class="date">Ngày tạo: @Model.NgayTao</div>
                <div class="date">Ngày giao: @Model.NgayGiao</div>
            </div>
        </div>
        <table border="0" cellspacing="0" cellpadding="0">
            <thead>
                <tr>
                    <th class="no">#</th>
                    <th class="desc">Tên sẩn phẩm</th>
                    <th class="unit">Đơn giá</th>
                    <th class="qty">Số lượng</th>
                    <th class="total">Tổng cộng</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int i = 0;
                }
                @foreach (var item in Model.ChiTietHDs)
                {
                    i++;
                    <tr>
                        <td class="no">@i</td>
                        <td class="desc">@item.TenSP</td>
                        <td class="unit">@item.DonGia.ToString("#,##0")</td>
                        <td class="qty">@item.SoLuong</td>
                        <td class="total">@item.TongCong.ToString("#,##0") VNĐ</td>
                    </tr>

                }

            </tbody>
            <tfoot>
                <tr>
                    <td colspan="2"></td>
                    <td colspan="2">TỔNG TIỀN</td>
                    <td>@Model.Total.ToString("#,##0") VNĐ</td>
                </tr>
            </tfoot>
        </table>
        <div id="thanks">Cảm ơn bạn đã mua hàng!</div>
    </main>
    <footer>
        Hóa đơn được tạo trên máy tính và hợp lệ mà không cần chữ ký và đóng dấu.
    </footer>
</body>
</html>