@model WEB.Areas.Administrator.Models.HoaDon

@{
    ViewBag.Title = "Hoàn tất hóa đơn";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<meta charset="utf-8">
<div style="margin-top:10px;">
    <a class="btn btn-primary btn-default" href="@Url.Action("Edit", "HoaDon", new { id = Model.MaHD })" role="button" style="background-color:none">Hoàn tất đơn hàng</a>
    <a href="@Url.Action("Index2", "HoaDon")"><i class="fa fa-backward"></i> Quay lại</a>
</div>
<div>
    <h3 style="text-decoration:underline">Thông tin khách hàng:</h3>
    <p>Tên khách hàng: <strong>@Model.KhachHang.HoTenKH</strong></p>
    <p>Địa chỉ: <strong>@Model.KhachHang.DiaChiKH</strong></p>
    <p>Điện thoại: <strong>@Model.KhachHang.DienThoai</strong></p>
    <p>Ghi chú: <strong>@Model.GhiChu</strong></p>
    <div>
        <div class="panel panel-default">
            <div class="panel-body" style="width:100%;height:500px;overflow:auto;">
                <div class="table-responsive table-bordered">
                    <table class="table">
                        <thead>
                            <tr style="background-color:#eeeeee">
                                <th>#</th>
                                <th>Tên sẩn phẩm</th>
                                <th>Đơn giá</th>
                                <th>Số lượng</th>
                                <th>Tổng cộng</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int i = 0;
                            }
                            @foreach (var item in Model.ChiTietHDs)
                            {
                                i++;
                                <tr>
                                    <td>@i</td>
                                    <td>@item.TenSP</td>
                                    <td>@item.DonGia.ToString("#,##0")</td>
                                    <td>@item.SoLuong</td>
                                    <td>@item.TongCong.ToString("#,##0") VNĐ</td>
                                </tr>

                            }

                        </tbody>
                    </table>
                </div>
                <div style="position:relative;left: 1200px;top:20px;border-bottom:5px solid #a09d9c;width:300px;">
                    <strong>TỔNG TIỀN : </strong>
                    <strong style="margin-left: 50px;">@Model.Total.ToString("#,##0") VNĐ</strong>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

