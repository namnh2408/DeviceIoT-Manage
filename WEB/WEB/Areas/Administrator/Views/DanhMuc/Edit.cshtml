@model WEB.Areas.Administrator.Models.DanhMuc

@{
    ViewBag.Title = "Cập nhật danh mục";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<h2>Cập nhật danh mục</h2>

<div>
    <i class="fa fa-undo fa-fw"></i>@Html.ActionLink("Quay lại", "Index", "DanhMuc")
</div>
@using (Html.BeginForm("Edit", "DanhMuc", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.MaDanhMuc)
        <div class="text-success">
            @ViewBag.EditCategory
        </div>
        <div class="form-group col-lg-5">
            <label>Tên danh mục</label>
            @Html.EditorFor(model => model.TenDanhMuc, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập tên danh mục..." } })
            <div class="text-danger">@Html.ValidationMessageFor(model => model.TenDanhMuc)</div>
            <label>Hình ảnh</label>
            <input type="file" id="file" name="file" />
            @Html.HiddenFor(model => model.DanhMucImg)
            <br />
            <input type="submit" value="Cập nhật" class="btn btn-default" />
        </div>
    </div>
}



<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
