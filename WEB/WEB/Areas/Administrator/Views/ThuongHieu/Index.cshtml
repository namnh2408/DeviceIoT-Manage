@model IEnumerable<WEB.Areas.Administrator.Models.ThuongHieu>

@{
    ViewBag.Title = "Thương hiệu";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<h2>Thương hiệu</h2>
<div class="text-warning">
    @ViewBag.PdcError
</div>
<hr />
<div>
    <div class="panel panel-default">
        <div class="panel-heading">
            <a class="btn btn-primary btn-default" href="@Url.Action("Create", "ThuongHieu")" role="button"><i class="fa fa-plus-circle"></i> Tạo thương hiệu mới</a>
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="table-responsive table-bordered">
                <table class="table">
                    <thead>
                        <tr style="background-color:#eeeeee">
                            <th>#</th>
                            <th>Tên thương hiệu</th>
                            <th>SĐT</th>
                            <th>Email</th>
                            <th>Địa chỉ</th>
                            <th>Hình ảnh</th>
                            <th>Chức năng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.MaThuongHieu)</td>
                                <td>@Html.DisplayFor(modelItem => item.TenTH)</td>
                                <td>@Html.DisplayFor(modelItem => item.DienTHoai)</td>
                                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                <td>@Html.DisplayFor(modelItem => item.DiaChi)</td>
                                <td><img src="@item.Photo" width="50" height="50" /></td>
                                <td>
                                    <a href="@Url.Action("Edit", "ThuongHieu", new { id = item.MaThuongHieu })"><i class="fa fa-pencil fa-fw"></i></a>|
                                    <a onclick="return confirm('Bạn có chắc chắn muốn xoá thương hiệu này?')" href="@Url.Action("Delete", "ThuongHieu", new { id = item.MaThuongHieu })"><i class="fa fa-times fa-fw"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>

